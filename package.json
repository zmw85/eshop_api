{
  "name": "eshop_api",
  "version": "0.1.3",
  "description": "eshop api",
  "config": {
    "s3BucketName": "aws-serverless-lambda",
    "region": "ap-southeast-2",
    "lambdaFunctionName": "eshop_express_lambda"
  },
  "scripts": {
    "dev": "gulp",
    "dev:docker": "docker run --name node -p 3000:3000 -v ~/projects/eshop/api:/app/eshop/api -w /app/eshop/api --rm node:6-alpine npm run dev",
    "test": "mocha ./test",
    "start": "node server/server.js",
    "lambda-scale": "aws lambda update-function-configuration --function-name $npm_package_config_lambdaFunctionName --memory-size $1",
    "lambda-deploy-latest": "sh lambda-deploy.sh",
    "lambda-publishNewVersion": "aws lambda publish-version --function-name $npm_package_config_lambdaFunctionName --description $npm_package_version",
    "lambda-develop-deploy": "aws lambda update-alias --function-name eshop_express_lambda --name develop --function-version $1",
    "lambda-production-deploy": "aws lambda update-alias --function-name eshop_express_lambda --name production --function-version $1"
  },
  "author": "Zhengmin Wang",
  "license": "ISC",
  "dependencies": {
    "aws-serverless-express": "^3.0.2",
    "bcrypt": "^1.0.2",
    "body-parser": "^1.17.1",
    "express": "^4.15.2",
    "express-jwt": "^5.1.0",
    "express-validator": "^3.2.0",
    "jsonwebtoken": "^7.3.0",
    "moment": "^2.18.1",
    "morgan": "^1.8.2",
    "mysql": "^2.13.0",
    "pug": "^2.0.0-rc.4",
    "rxjs": "^5.3.0",
    "sequelize": "^3.30.4",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "chai-http": "^3.0.0",
    "eslint": "^4.7.2",
    "eslint-config-google": "^0.9.1",
    "eslint-plugin-react": "^7.3.0",
    "gulp": "^3.9.1",
    "gulp-eslint": "^3.0.1",
    "gulp-nodemon": "^2.2.1",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "package-json-io": "^1.0.0"
  }
}
